<Window x:Class="OpenSAE.BitmapConverterWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:models="clr-namespace:OpenSAE.Models" xmlns:views="clr-namespace:OpenSAE.Views"
        d:DataContext="{d:DesignInstance Type=models:BitmapConverterModel}"
        mc:Ignorable="d"
        Title="Bitmap -> symbol art converter" Height="450" Width="800" ResizeMode="CanResizeWithGrip">
    <DockPanel>
        <Grid Margin="5" DockPanel.Dock="Top">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="auto" />
                <ColumnDefinition Width="*" />
                <ColumnDefinition Width="auto" />
            </Grid.ColumnDefinitions>
            <Grid.RowDefinitions>
                <RowDefinition Height="auto" />
                <RowDefinition Height="auto" />
            </Grid.RowDefinitions>

            <TextBlock VerticalAlignment="Center">Bitmap image</TextBlock>
            <TextBox Grid.Column="1" VerticalAlignment="Center" Text="{Binding BitmapFilename}" Margin="5 0" />
            <Button Grid.Column="2" Style="{StaticResource standardButton}" Command="{Binding BrowseCommand}">Browse...</Button>
        </Grid>

        <StatusBar DockPanel.Dock="Bottom" Padding="3">
            <TextBlock Style="{StaticResource iconText}" Text="{StaticResource layersIcon}" />
            <TextBlock>
                Uses <Run Text="{Binding CurrentSymbolArt.LayerCount, Mode=OneWay}" /> out of a maximum of 225 symbols
            </TextBlock>
        </StatusBar>
        
        <DockPanel DockPanel.Dock="Left" Margin="5 5 10 5">
            <Button Content="Accept" Command="{Binding AcceptCommand}" DockPanel.Dock="Bottom" />
            <StackPanel>
                <TextBlock Text="Max colors" Margin="10" />
                <TextBox Text="{Binding MaxColors}" />
                <Slider Value="{Binding MaxColors}" Minimum="5" Maximum="60" Margin="0 5 0 0" />
            
                <TextBlock Text="Resize height (px)" Margin="0 10 0 3" />
                <TextBox Text="{Binding ResizeImageHeight}" />
                <Slider Value="{Binding ResizeImageHeight}" Minimum="24" Maximum="96" TickFrequency="4" IsSnapToTickEnabled="True" Margin="0 5 0 0" />
            
                <TextBlock Text="Symbol spacing" Margin="0 10 0 3" />
                <TextBox Text="{Binding SymbolSizeOffset, StringFormat=0.00}" />
                <Slider Value="{Binding SymbolSizeOffset}" Minimum="0.1" Maximum="1" Margin="0 5 0 0" TickFrequency="0.05" IsSnapToTickEnabled="True" />

                <CheckBox IsChecked="{Binding RemoveWhite}" Content="Remove white" Margin="0 5" />
            </StackPanel>
        </DockPanel>

        <Grid>
            <Rectangle Grid.Row="1" Grid.Column="2" Panel.ZIndex="-2">
                <Rectangle.Fill>
                    <DrawingBrush TileMode="Tile" Viewport="0,0,32,32" ViewportUnits="Absolute">
                        <DrawingBrush.Drawing>
                            <GeometryDrawing Geometry="M0,0 H1 V1 H2 V2 H1 V1 H0Z" Brush="#eee"/>
                        </DrawingBrush.Drawing>
                    </DrawingBrush>
                </Rectangle.Fill>
            </Rectangle>

            <views:SymbolArtRenderer
                ClipToBounds="True"
                Panel.ZIndex="-1"
                SymbolArt="{Binding CurrentSymbolArt}"
                ApplyToneCurve="True"
                ShowBoundingBox="True"
                ShowGuides="False"
                />
        </Grid>
    </DockPanel>
</Window>
